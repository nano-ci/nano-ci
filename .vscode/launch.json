    "version": "0.2.0",
    "configurations": [
		{
			"name": "nano-ci-master",
			"type": "Ruby",
			"request": "attach",
			"preLaunchTask": "rake: docker:nano-ci-master:debug",
			"postDebugTask": "rake: docker:nano-ci-master:debug-clean",
			"cwd": "${workspaceRoot}",
			"remoteHost": "local.docker.nanoci.cloud",
			"remotePort": "23456",
			"remoteWorkspaceRoot": "/nano-ci/"
		},
		{
			"name": "nano-ci-agent",
			"type": "Ruby",
			"request": "attach",
			"preLaunchTask": "rake: docker:nano-ci-agent:debug",
			"postDebugTask": "rake: docker:nano-ci-agent:debug-clean",
			"cwd": "${workspaceRoot}",
			"remoteHost": "local.docker.nanoci.cloud",
			"remotePort": "23457",
			"remoteWorkspaceRoot": "/nano-ci/"
		},
        {
			"name": "RSpec - all",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "C:/tools/Ruby25-x64/bin/rspec",
			"args": [
				"--format", "documentation"
			]
		},
		{
			"name": "RSpec - open spec file",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "C:/tools/Ruby25-x64/bin/rspec",
			"args": ["${file}"]
		}
    ]
}
