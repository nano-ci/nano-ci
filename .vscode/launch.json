    "version": "0.2.0",
    "configurations": [
		{
			"name": "Debug",
			"type": "Ruby",
			"request": "launch",
			"program": "${workspaceRoot}/bin/nano-ci",
			"args": [
				"--project=samples/dsl-project.nanoci"
			]
		},
        {
			"name": "RSpec - all",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "/home/thevk/.rbenv/versions/2.7.2/bin/rspec",
			"args": [
				"--format", "documentation"
			]
		},
		{
			"name": "RSpec - open spec file",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "/home/thevk/.rbenv/versions/2.7.2/bin/rspec",
			"args": ["${file}"]
		}
    ]
}
